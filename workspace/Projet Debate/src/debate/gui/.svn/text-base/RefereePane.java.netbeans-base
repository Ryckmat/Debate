    public JList getArgumentsJList() {
        return argumentsJList;
    }

    public JList getFormulasJList() {
        return formulasJList;
    }

    public Referee getReferee() {
        return referee;
    }

    public void refreshModel() {
        ((DefaultListModel) formulasJList.getModel()).clear();
        for (String s : referee.getFormulaList()) {
            ((DefaultListModel) formulasJList.getModel()).addElement(s);
        }
        ((DefaultListModel) argumentsJList.getModel()).clear();
        for (Argument a : referee.getArgumentList()) {
            ((DefaultListModel) argumentsJList.getModel()).addElement(a);
        }
    }
